<?xml version="1.0" encoding="UTF-8"?>

<project>
  <pomVersion>3</pomVersion>
  <name>Web2.0</name>
  <artifactId>com.idega.block.web2.0</artifactId>
  <currentVersion>3.1.6</currentVersion>
  <inceptionYear>2006</inceptionYear>
  <shortDescription>Web2.0, scripts for enabling web 2.0 features</shortDescription>
  <!-- build stuff copied from base-project.xml -->

  <organization>
    <name>idega software</name>
    <url>http://www.idega.com</url>
    <logo>http://developer.idega.com/idega_onwhite_120.gif</logo>
  </organization>
  <groupId>bundles</groupId>
  <package>${pom.artifactId}</package>
  <repository>
    <connection>scm:cvs:ext:${cvs.username}@einstein.idega.is:/idega/cvs:${pom.groupId}/${pom.artifactId}.bundle/</connection>
    <developerConnection>scm:cvs:ext:${cvs.username}@einstein.idega.is:/idega/cvs:${pom.groupId}/${pom.artifactId}.bundle/</developerConnection>
  </repository>
  <url>http://developer.idega.com/${pom.groupId}/${pom.artifactId}/</url>
  <issueTrackingUrl>http://issues.idega.is/</issueTrackingUrl>
  <siteAddress>developer.idega.com</siteAddress>
  <siteDirectory>/var/www/webs/developer.idega.com/${pom.groupId}/${pom.artifactId}/</siteDirectory>
  <versions>
    <version>
      <id>3.1.0</id>
      <name>3.1.0</name>
      <tag>WEB20_3_1_0</tag>
    </version>
    <version>
      <id>3.1.1</id>
      <name>3.1.1</name>
      <tag>WEB20_3_1_1</tag>
    </version>
    <version>
      <id>3.1.2</id>
      <name>3.1.2</name>
      <tag>WEB20_3_1_2</tag>
    </version>
    <version>
      <id>3.1.3</id>
      <name>3.1.3</name>
      <tag>WEB20_3_1_3</tag>
    </version>
    <version>
      <id>3.1.4</id>
      <name>3.1.4</name>
      <tag>WEB20_3_1_4</tag>
    </version>
    <version>
      <id>3.1.5</id>
      <name>3.1.5</name>
      <tag>WEB20_3_1_5</tag>
    </version>
    <version>
      <id>3.1.6</id>
      <name>3.1.6</name>
      <tag>WEB20_3_1_6</tag>
    </version>
  </versions>
  <branches/>
  <developers>
    <developer>
      <name>Eirikur S. Hrafnsson</name>
      <id>eiki</id>
      <email>eiki@idega.is</email>
      <organization>idega software</organization>
      <roles/>
    </developer>
  </developers>
  <build>
    <nagEmailAddress>tryggvi@idega.com</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
    <resources>
      <resource>
        <directory>${basedir}/resources</directory>
        <targetPath>resources</targetPath>
        <includes>
          <include>**/**</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/properties</directory>
        <targetPath>properties</targetPath>
        <includes>
          <include>**/**</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/WEB-INF</directory>
        <targetPath>WEB-INF</targetPath>
        <includes>
          <include>**/**</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/jsp</directory>
        <targetPath>jsp</targetPath>
        <includes>
          <include>**/**</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/WEB-INF/tld</directory>
        <targetPath>META-INF</targetPath>
        <includes>
          <include>**/*.tld</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/WEB-INF</directory>
        <targetPath>META-INF</targetPath>
        <includes>
          <include>faces-config.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.wsdd</include>
        </includes>
      </resource>
    </resources>
  </build>
  <dependencies>
    <dependency>
      <groupId>bundles</groupId>
      <artifactId>com.idega.core</artifactId>
      <version>3.1.90</version>
      <type>jar</type>
      <url>http://www.idega.com/</url>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
      </properties>
    </dependency>
    <dependency>
      <groupId>ejb</groupId>
      <artifactId>ejb</artifactId>
      <version>2.0</version>
      <type>jar</type>
      <url>http://java.sun.com/products/ejb/docs.html</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>jta</groupId>
      <artifactId>jta</artifactId>
      <version>spec1_0_1</version>
      <type>jar</type>
      <url>http://java.sun.com/products/jta/jta-1_0_1B-doc</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces-jsf-api</artifactId>
      <version>1.1.3</version>
      <type>jar</type>
      <url>http://java.sun.com/j2ee/javaserverfaces/</url>
      <properties>
        <idegaweb.bundle.include>true</idegaweb.bundle.include>
      </properties>
    </dependency>
    <dependency>
      <groupId>myfaces</groupId>
      <artifactId>myfaces-tomahawk</artifactId>
      <version>1.1.3</version>
      <type>jar</type>
      <url>http://www.myfaces.org/</url>
      <properties/>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.4</version>
      <type>jar</type>
      <url>http://java.sun.com/products/servlet/docs.html</url>
      <properties/>
    </dependency>
  </dependencies>
  <properties/>
</project>
